@model BusTickets.Models.Booking
@{
    Layout = "_Layout";
    var bus = new SelectList((System.Collections.IEnumerable)ViewData["bus"], "Id", "BusNumber");
}
<form method="post" asp-area="Customs" asp-controller="Booking" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model == null || Model.Id == 0) ? "Add" : "Update")Booking Details</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3">
            <label asp-for="BusId"></label>
            <select id="busSelect" asp-for="BusId" asp-items="bus" onchange="changeSeats()" class="form-control"></select>
        </div>
        <div class="row mb-3">
            <label asp-for="SeatId"></label>
            <select id="seatSelect" asp-for="SeatId" class="form-control"></select>
        </div>
        <div class="row mb-3">
            <label asp-for="BookingDate"></label>
            <input type="datetime" asp-for="BookingDate" class="form-control"/>
        </div>
        @if (Model == null || Model.Id == 0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">update</button>
        }
    </div>
</form>

            @section scripts
    {
    <script src="~/js/Booking.js"></script>
    }